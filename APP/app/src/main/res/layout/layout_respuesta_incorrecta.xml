<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#FFCDD2">

    <!-- Mensaje de respuesta incorrecta -->
    <TextView
        android:id="@+id/textoRespuestaIncorrecta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Respuesta Incorrecta"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="20dp" />

    <!-- Botón para intentar nuevamente o volver al menú -->
    <Button
        android:id="@+id/botonReintentar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver a Intentar"
        android:textSize="18sp"
        android:padding="10dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColor="@android:color/white" />
</LinearLayout>
